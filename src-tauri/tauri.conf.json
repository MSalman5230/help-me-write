{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Grammar Fixer",
  "version": "0.1.0",
  "identifier": "com.ai-grammar-fixer.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AI Grammar Fixer",
        "width": 1280,
        "height": 720,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "visible": false,
        "center": false,
        "resizable": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}