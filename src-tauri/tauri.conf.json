{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Help Me Write",
  "version": "0.9.0",
  "identifier": "com.help-me-write",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Help Me Write",
        "width": 1280,
        "height": 720,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "visible": false,
        "center": false,
        "resizable": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/450x450.png"
    ]
  }
}